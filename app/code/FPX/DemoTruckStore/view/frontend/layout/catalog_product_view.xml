<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <action method='setTemplate'>
                <argument name='template' xsi:type='string'>FPX_DemoTruckStore::product/view/details.phtml</argument>
            </action>
            <block class="Magento\Catalog\Block\Product\View" name="product.standard.features.tab" template="FPX_DemoTruckStore::standard_features.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Standard Features</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
